body
    margin: 0


.markdown-wrapper
    position: relative
    border: 1px solid #dcdcdc
    box-shadow: 1px 1px 3px #eee
    height: 100%
    font-size: 14px
    overflow: hidden
    background-color: #f7f7f9
    .markdown-editor 
        position: relative
        display: inline-block
        width: 50%
        height: 100%
        vertical-align: top

        .editor 
            position: relative

            textarea 
                resize: none
                padding: 10px
                line-height: 20px
                width: 100%
                background-color: #fff
                border: none
                outline: none
                overflow-y: scroll
                font-size: 16px

    .markdown-toolbar 
        background-color: #ffffff
        border-bottom: 1px solid #eee
        padding: 5px 0
        .tool 
            display: inline-block
            width: 30px
            height: 30px
            line-height: 30px
            text-align: center
            margin: 5px 5px 5px 5px
            cursor: pointer
            background-position: center
            background-size: contain
            background-repeat: no-repeat
            background-color: #fff
            &:hover
                background-color: #fff*0.95
            &.blod
                margin-left: 20px
                background-image: url('../src/image/blod.png')
            &.italic
                background-image: url('../src/image/I.png')
            &.a
                background-image: url('../src/image/link.png')
            &.quote
                background-image: url('../src/image/quote.png')
            &.code
                background-image: url('../src/image/code.png')
            &.title-tool
                background-image: url('../src/image/T3.png')
            &.title1-tool
                background-image: url('../src/image/T2.png')
            &.title2-tool
                background-image: url('../src/image/T1.png')
            &.image-tool
                background-image: url('../src/image/image.png')
            &.line-tool
                background-image: url('../src/image/line.png')
            &.last-step-tool
                background-image: url('../src/image/back.png')
            &.next-step-tool
                background-image: url('../src/image/next.png')


    .markdown-viewer 
        position: relative
        display: inline-block   
        vertical-align: top
        width: 50%
        overflow-y: scroll
        background-color: rgb(251, 251, 253)
        font-size: 16px
        .markdown-viewer-inner
            position: relative
            padding: 10px
            img
                width: 100%
            pre
                background-color: #f5f5f5
                padding: 5px
                border-radius: 3px
            p
                margin: 0
.markdown-menu-background
    position: fixed 
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-color: rgba(0, 0, 0, 0.5)
    overflow: hidden
    text-align: center
    display: none
    &.open
        display: block
    .markdown-upload-image
        width: 0
        height: 0
        visibility: hidden
    .drop-or-click
        position: relative
        width: 100%
        height: 200px
        border: 1px solid #dcdcdc
        cursor: pointer
        background-size: contain
        background-position: center
        background-repeat: no-repeat
        .upload-area
            position: absolute
            width: 90%
            height: 80%
            top: 10%
            left: 5%
            border: 2px dashed #dcdcdc
            border-radius: 10px
            line-height: 160px
            font-size: 14px
            color: #888
            text-align: center
            &:hover
                background: rgba(10,10,10,0.7)
            .upload-logo
                width: 18px
                height: 18px
                display: inline-block
                vertical-align: middle
                margin-right: 10px
                background-image: url('../src/image/upload.png')
                background-size: contain
                background-repeat: no-repeat
                background-position: center
                
    .markdown-menu
        position: absolute
        top: 120px
        left: 50%
        margin-left: -200px
        width: 400px
        border: none
        background-color: #fff
            
        .markdown-menu-head
            padding: 20px
            text-align: left
        .markdown-menu-body
            padding: 0 20px
            input
                outline: none
                width: 100%
                padding: 10px
        .markdown-menu-footer
            padding: 20px
            .markdown-menu-button
                border: 1px solid #dcdcdc
                padding: 8px 15px
                text-align: center
                margin: 0 20px 0 0
                cursor: pointer
                outline: none
                &:hover
                    background-color: #fff*0.8
